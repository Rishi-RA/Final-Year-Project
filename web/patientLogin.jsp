    %>
    <script>alert('Registration Success');</script>
    <%            }
    %>
    <%
        if (request.getParameter("Failed") != null) {
    %>
    <script>alert('Login Failed');</script>
    <%            }
    %>
<body>
    <section>
  <header class="header">
    <a href="#" class="logo">Developer</a>
    <nav class="nav-items">
      <a href="index.jsp">Home</a>
      <a href="patientLogin.jsp">Patient</a>
      <a href="doctorLogin.jsp">Doctor</a>
      <a href="taLogin.jsp">Trusted Authority</a>
      <a href="cloudLogin.jsp">Cloud</a>
    </nav>
  </header>
  
    <div class="intro">
      <h1>Secure Fine-Grained Encrypted Keyword
                                Search for E-Healthcare Cloud</h1>
    </div>
    </section>
    <section>
        
        
        <div class="bg-img">
         <div class="content">
            <header>Login Form</header>
            <form action="patientSignin.jsp" method="post">
               <div class="field">
                  <span class="fa fa-user"></span>
                  <input type="email" name="email"placeholder="Enter Your Email" required=""><br>
               </div>
               <div class="field space">
                  <span class="fa fa-lock"></span>
                  <input type="password" name="pass" class="pass-key" placeholder="Enter Your Password" required=""><br>
                                      
                  <span class="show">SHOW</span>
               </div>
               <div class="pass">
                  <a href="#">Forgot Password?</a>
               </div>
               <div class="field">
                  <input type="submit" value="LOGIN">
               </div>
            </form>
            <div class="login">
               Or login with
            </div>
            <div class="links">
               <div class="facebook">
                  <i class="fab fa-facebook-f"><span>Facebook</span></i>
               </div>
               <div class="instagram">
                  <i class="fab fa-instagram"><span>Instagram</span></i>
               </div>
            </div>
            <div class="signup">
               Don't have account?
               <a href="patientSignup.jsp">Register!</a>
            </div>
         </div>
      </div>
      <script>
         const pass_field = document.querySelector('.pass-key');
         const showBtn = document.querySelector('.show');
         showBtn.addEventListener('click', function(){
          if(pass_field.type === "password"){
            pass_field.type = "text";
            showBtn.textContent = "HIDE";
            showBtn.style.color = "#3498db";
          }else{
            pass_field.type = "password";
            showBtn.textContent = "SHOW";
            showBtn.style.color = "#222";
          }
         });
      </script>
        
    </section>
    
    
    
</body>

</html>